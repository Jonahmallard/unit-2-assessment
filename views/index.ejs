<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <body>
    <h1>To Do List</h1>
    <% if (todos.length) { %>
      <% todos.forEach((todo) => { %>
        <ul>
          <li><%= todo %> - <%= todo.done ? 'Done' : 'Not Done' %></li>
        </ul>
      <% }) %>
    <% } else { %>
      <h3>There are no To Dos yet!</h3>
      <% } %>
    <form action="/" method="POST">
      <input required type="todo" name="todo">
      <button type="submit">Add</button>
    </form>
  </body>
</html>
